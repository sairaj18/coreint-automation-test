{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^\\.github/workflows/build_publish_builder_image\\.yaml$"],
      "matchStrings": [
        "go-version:\\s*\\[(?<currentValues>[\\d\\.,\\s]+)\\]"
      ],
      "datasourceTemplate": "golang-version",
      "versioningTemplate": "semver",
      "depNameTemplate": "go",
      "currentValueTemplate": "{{#each (split currentValues ',')}}{{this}}{{#unless @last}},{{/unless}}{{/each}}"
    }
  ],
  "packageRules": [
    {
      "description": "Automerge patch updates for Go versions",
      "matchDatasources": ["golang-version"],
      "matchPackageNames": ["go"],
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "prCreation": "immediate"
    },
    {
      "description": "Automerge minor updates for trivy-action",
      "matchUpdateTypes": ["minor"],
      "matchPackageNames": ["aquasecurity/trivy-action"],
      "automerge": true,
      "automergeType": "branch",
      "pruneBranchAfterAutomerge": true
    }
  ]
}
