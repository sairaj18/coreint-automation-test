{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^\\.github/workflows/build_publish_builder_image.yaml$"],
      "matchStrings": [
        "go-version: \\[(?<currentValue>1\\.22\\.\\d+), \\d+\\.\\d+\\.\\d+\\]"
    ],
      "depNameTemplate": "golang-1.22",
      "datasourceTemplate": "golang",
      "versioningTemplate": "semver",
      "currentValueTemplate": "{{currentValue}}"
    },
    {
      "fileMatch": ["^\\.github/workflows/build_publish_builder_image.yaml$"],
      "matchStrings": [
        "go-version: \\[\\d+\\.\\d+\\.\\d+, (?<currentValue>1\\.23\\.\\d+)\\]"
      ],
      "depNameTemplate": "golang-1.23",
      "datasourceTemplate": "golang",
      "versioningTemplate": "semver",
      "currentValueTemplate": "{{currentValue}}"
    }
  ],
  "packageRules": [
     {
      "matchPackageNames": ["golang-1.22", "golang-1.23"],
      "updateTypes": ["patch"],
      "groupName": "Go patch updates",
      "automerge": true,
      "automergeType": "branch"
    }
  ]
}
