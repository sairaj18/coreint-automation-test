{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^\\.github/workflows/build_publish_builder_image\\.yaml$"],
      "matchStrings": [
        "go-version: \\[\\s*(?<currentValue1>1\\.22\\.\\d+),\\s*(?<currentValue2>1\\.23\\.\\d+)]"
      ],
      "datasourceTemplate": "golang-version",
      "depNameTemplate": "golang",
      "currentValueTemplate": "{{{currentValue}}}",
      "extractVersionTemplate": "(?<version>1\\.\\d+\\.\\d+)"
    }
  ],
  "packageRules": [
    {
      "description": "Automerge patch updates for Go versions 1.22.x and 1.23.x",
      "matchDatasources": ["golang-version"],
      "matchPackageNames": ["golang"],
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "prCreation": "immediate",
      "groupName": "Go patch updates"
    },
    {
      "description": "Automerge minor updates for trivy-action",
      "matchUpdateTypes": ["minor"],
      "matchPackageNames": ["aquasecurity/trivy-action"],
      "automerge": true,
      "automergeType": "branch",
      "pruneBranchAfterAutomerge": true
    }
  ]
}
