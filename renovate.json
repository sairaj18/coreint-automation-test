{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^\\.github/workflows/build_publish_builder_image.yaml$"],
      "matchStrings": [
        "go-version: \\[(?<currentValue1>1\\.22\\.\\d+),\\s*(?<currentValue2>1\\.23\\.\\d+)\\]"
      ],
      "depNameTemplate": "{{#if currentValue1}}go-1.22{{else}}go-1.23{{/if}}",
      "datasourceTemplate": "golang",
      "versioningTemplate": "semver",
      "currentValueTemplate": "{{#if currentValue1}}{{currentValue1}}{{else}}{{currentValue2}}{{/if}}"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["regex"],
      "matchPackagePatterns": ["^go-1\\.22$", "^go-1\\.23$"],
      "matchUpdateTypes": ["patch"],
      "groupName": "Go patch updates",
      "automerge": true,
      "automergeType": "branch",
      "pruneBranchAfterAutomerge": true,
      "platformAutomerge": true,
      "prCreation": "immediate"
    }
  ]
}
