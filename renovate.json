{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^\\.github/workflows/build_publish_builder_image.yaml$"],
      "matchStrings": [
        "go-version:\\s*\\[(?<currentValue1>1\\.22\\.\\d+),\\s*(?<currentValue2>1\\.23\\.\\d+)\\]"
      ],
      "datasourceTemplate": "golang-version",
      "versioningTemplate": "semver",
      "depNameTemplate": "golang",
      "currentValueTemplate": "{{currentValue1}}",
      "lookupNameTemplate": "golang",
      "extractVersionTemplate": "{{currentValue1}}"
    },
    {
      "fileMatch": ["^\\.github/workflows/build_publish_builder_image.yaml$"],
      "matchStrings": [
        "go-version:\\s*\\[(?<currentValue1>1\\.22\\.\\d+),\\s*(?<currentValue2>1\\.23\\.\\d+)\\]"
      ],
      "datasourceTemplate": "golang-version",
      "versioningTemplate": "semver",
      "depNameTemplate": "golang",
      "currentValueTemplate": "{{currentValue2}}",
      "lookupNameTemplate": "golang",
      "extractVersionTemplate": "{{currentValue2}}"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": ["golang"],
      "matchDatasources": ["golang-version"],
      "groupName": "Go patch updates",
      "automerge": true,
      "automergeType": "pr",
      "matchUpdateTypes": ["patch"],
      "pruneBranchAfterAutomerge": true,
      "platformAutomerge": true,
      "prCreation": "immediate"
    }
  ]
}
