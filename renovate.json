{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^\\.github/workflows/build_publish_builder_image.yaml$"],
      "matchStrings": [
        "go-version: \\[(?<depName1>go1) (?<currentValue1>1\\.22\\.\\d+), (?<depName2>go2) (?<currentValue2>1\\.23\\.\\d+)\\]"
      ],
      "depNameTemplate": "{{#if depName1}}{{depName1}}{{else}}{{depName2}}{{/if}}",
      "datasourceTemplate": "golang",
      "versioningTemplate": "semver",
      "extractVersionTemplate": "{{#if currentValue1}}{{currentValue1}}{{else}}{{currentValue2}}{{/if}}"
    },
    {
      "fileMatch": ["^\\.github/workflows/build_publish_builder_image.yaml$"],
      "matchStrings": [
        "go-version: \\[(?<depName2>go2) (?<currentValue2>1\\.23\\.\\d+), (?<depName1>go1) (?<currentValue1>1\\.22\\.\\d+)\\]"
      ],
      "depNameTemplate": "{{#if depName2}}{{depName2}}{{else}}{{depName1}}{{/if}}",
      "datasourceTemplate": "golang",
      "versioningTemplate": "semver",
      "extractVersionTemplate": "{{#if currentValue2}}{{currentValue2}}{{else}}{{currentValue1}}{{/if}}"
    }
  ],
  "packageRules": [
     {
      "matchPackageNames": ["go1", "go2"],
      "updateTypes": ["patch"],
      "automerge": true,
      "automergeType": "branch",
      "groupName": "Go patch updates"
    }
  ]
}
