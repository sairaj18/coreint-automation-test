{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^\\.github/workflows/build_publish_builder_image.yaml$"],
      "matchStrings": [
        "go-version: \\[(?<depName>go1\\.22)\\s*(?<currentValue>1\\.22\\.\\d+),\\s*1\\.23\\.\\d+\\]"
      ],
      "datasourceTemplate": "golang",
      "versioningTemplate": "semver",
      "currentValueTemplate": "{{currentValue}}"
    },
    {
      "fileMatch": ["^\\.github/workflows/build_publish_builder_image.yaml$"],
      "matchStrings": [
        "go-version: \\[1\\.22\\.\\d+,\\s*(?<depName>go1\\.23)\\s*(?<currentValue>1\\.23\\.\\d+)\\]"
      ],
      "datasourceTemplate": "golang",
      "versioningTemplate": "semver",
      "currentValueTemplate": "{{currentValue}}"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["regex"],  // Indicates handling of regex based managers
      "matchPackagePatterns": ["^go1\\.22$", "^go1\\.23$"],  // Matches dependencies named go1.22 and go1.23
      "updateTypes": ["patch"],  // Limits updates to patch-level changes
      "groupName": "Go patch updates",
      "automerge": true,  // Enables auto-merging
      "automergeType": "pr",  // Specifies the auto-merge type to branch
      "pruneBranchAfterAutomerge": true,
      "platformAutomerge": true,
      "prCreation": "immediate"
    }
  ]
}
