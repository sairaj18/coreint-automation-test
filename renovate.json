{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^\\.github/workflows/build_publish_builder_image.yaml$"],
      "matchStrings": [
        "go-version:\\s*\\[(?<currentValue1>1\\.22\\.\\d+),\\s*(?<currentValue2>1\\.23\\.\\d+)\\]"
      ],
      "datasourceTemplate": "golang",
      "depNameTemplate": "golang",
      "currentValueTemplate": "{{#if currentValue1}}{{currentValue1}}{{else}}{{currentValue2}}{{/if}}"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": ["golang"],
      "matchDatasources": ["regex"],
      "groupName": "Go patch updates",
      "automerge": true,
      "automergeType": "pr",
      "matchUpdateTypes": ["patch"],
      "pruneBranchAfterAutomerge": true,
      "platformAutomerge": true,
      "prCreation": "immediate"
    }
  ]
}
