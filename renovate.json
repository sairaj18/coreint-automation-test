{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^\\.github/workflows/build_publish_builder_image.yaml$"],
      "matchStrings": [
        "go-version: \\[(?<currentValue1>1\\.22\\.\\d+),\\s*(?<currentValue2>1\\.23\\.\\d+)]"
      ],
      "datasourceTemplate": "golang",
      "depNameTemplate": "golang1",
      "versioningTemplate": "semver",
      "extractVersionTemplate": "{{#if currentValue1}}{{currentValue1}}{{else}}{{currentValue2}}{{/if}}"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [ "minor" ],
      "matchPackageNames": [ "aquasecurity/trivy-action" ],
      "automerge": true,
      "automergeType": "branch",
      "pruneBranchAfterAutomerge": true
    },
    {
      "matchDatasources": ["regex"],
      "matchPackageNames": "golang1",
      "versioning": "semver",
      "updateTypes": ["patch"],
      "groupName": "Go patch updates",
      "automerge": true,
      "automergeType": "branch"
    }
  ]
}
