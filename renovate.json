{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
   "regexManagers": [
    {
      "fileMatch": ["^\\.github/workflows/build_publish_builder_image.yaml$"],
      "matchStrings": [
        "go-version: \\[(?<currentValue1>1\\.22\\.\\d+),\\s*(?<currentValue2>1\\.23\\.\\d+)\\]"
      ],
      "datasourceTemplate": "golang",
      "versioningTemplate": "semver",
      "extractVersionTemplate": "(?<currentValue>\\d+\\.\\d+\\.\\d+)"
       "depNameTemplate":"golang"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [ "minor" ],
      "matchPackageNames": [ "aquasecurity/trivy-action" ],
      "automerge": true,
      "automergeType": "branch",
      "pruneBranchAfterAutomerge": true
    },
    {
      "matchDatasourceNames": ["golang"],
      "matchPackageNames": ["golang"],
      "updateTypes": ["patch"],
      "groupName": "Go patch updates",
      "automerge": true,
      "automergeType": "pr"
    }
  ]
}
