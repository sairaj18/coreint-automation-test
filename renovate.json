{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^\\.github/workflows/build_publish_builder_image.yaml$"],
      "matchStrings": [
        "go-version: \\[(?<depName>go1.22)\\s*(?<currentValue>1\\.22\\.\\d+),\\s*(?<depName2>go1.23)\\s*(?<currentValue2>1\\.23\\.\\d+)]"
      ],
      "datasourceTemplate": "golang",
      "versioningTemplate": "semver",
      "currentValueTemplate": "{{currentValue}}"
    },
    {
      "fileMatch": ["^\\.github/workflows/build_publish_builder_image.yaml$"],
      "matchStrings": [
        "go-version: \\[(?<depName2>go1.22)\\s*(?<currentValue1>1\\.22\\.\\d+),\\s*(?<depName>go1.23)\\s*(?<currentValue2>1\\.23\\.\\d+)]"
      ],
      "datasourceTemplate": "golang",
      "versioningTemplate": "semver",
      "currentValueTemplate": "{{currentValue2}}"
    }
  ],
  "packageRules": [
     {
      "matchPackagePatterns": ["^go1.22$", "^go1.23$"],
      "updateTypes": ["patch"],
      "automerge": true,
      "automergeType": "pr",
      "groupName": "Go patch updates"
    }
  ]
}
